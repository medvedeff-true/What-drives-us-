label prolog:
    show name at center with dissolve2
    $ username = renpy.input("Введи своё имя, дорогой игрок:", length=12, default="", allow="абвгдеёжзийклмнопрстуфхцчшщъыьэюя-АБВГДЕЁЖЗИЙКЛМНОПРСТУФХЦЧШЩЪЫЬЭЮЯ") .strip()
